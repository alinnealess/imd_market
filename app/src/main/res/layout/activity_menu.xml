<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:background="#faf1e8">

    <!-- Título IMDMARKET -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:gravity="center"
        android:padding="16dp"
        android:text="IMDMARKET"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="O que deseja fazer?"
        android:textSize="20sp"
        />

    <!-- GridLayout para Botões -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="114dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/botao_arredondado"
            android:text="Cadastrar \nProduto" />

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="114dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/botao_arredondado"
            android:text="Alterar \nProduto" />

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="114dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/botao_arredondado"
            android:text="Excluir \nProduto" />

        <Button
            android:id="@+id/btnListar"
            android:layout_width="114dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/botao_arredondado"
            android:text="Listar \nProdutos" />
    </GridLayout>

</LinearLayout>
